<Window x:Class="Q_analysis.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q_analysis"
        mc:Ignorable="d"
        Title="ResultWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MaxHeight="500px"/>
            <RowDefinition Height="auto" MaxHeight="500px" />
            <RowDefinition Height="auto" MaxHeight="500px" />
            <RowDefinition Height="auto" MaxHeight="500px" />
            <RowDefinition Height="auto" MaxHeight="500px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock>Project Name</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0, 20, 0, 0" VerticalAlignment="Center" FontSize="18" FontWeight="DemiBold" HorizontalAlignment="Center">Results</TextBlock>
        <TextBlock x:Name="qVectorText" Grid.Row="2" Margin="0, 50, 0, 0" Grid.Column="1" VerticalAlignment="Center" FontSize="18" FontWeight="DemiBold" HorizontalAlignment="Center" Text="{Binding qVectorInfo}"></TextBlock>

        <TextBlock Grid.Row="3" Margin="0, 15, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="12" FontWeight="DemiBold">Eccentricity</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="1" Margin="0, 15, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="12" FontWeight="DemiBold">Q-vector</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="2" Margin="0, 15, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="12" FontWeight="DemiBold">Binary matrix</TextBlock>

        <ListView x:Name="qVector" Grid.Row="4" d:ItemsSource="{DynamicResource ResourceKey=array}" Grid.Column="1" VerticalAlignment="Top" MaxHeight="500px">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Dimension q = i" DisplayMemberBinding="{Binding Dimension}"/>
                    <GridViewColumn Header="Qi" DisplayMemberBinding="{Binding QValue}"/>
                    <GridViewColumn Header="Connectivity components">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Vectors}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--<GridViewColumn Header="Connectivity components" DisplayMemberBinding="{Binding Vectors}"/>-->
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="eccentricity" d:ItemsSource="{DynamicResource ResourceKey=eccArray}" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" MaxHeight="500px">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Header="Following J. Casti" DisplayMemberBinding="{Binding eccCasti}"/>
                    <GridViewColumn  Header="Following D.Duckstein" DisplayMemberBinding="{Binding eccDuck}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Border Margin="20px" HorizontalAlignment="Left" VerticalAlignment="Bottom" CornerRadius="6" BorderBrush="#546DE5" BorderThickness="2" Grid.Column="0" Grid.Row="5"  Width="70" Height="30">
            <Button  BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"  Background="#546DE5" Foreground="White"  Click="check">Settings</Button>
        </Border>

        <Grid Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <DataGrid x:Name="visualMatrix" ItemsSource="{Binding matrix}"  MaxHeight="500px" VerticalAlignment="Top" IsReadOnly="True" CanUserResizeColumns="False" CanUserReorderColumns="False"/>


        </Grid>


    </Grid>
</Window>
